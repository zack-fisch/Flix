<aside id="sidebar">
  <nav>
    <ul>
      <li class="all-movies">
        <%= link_to 'All Movies', movies_path, class: 'button' %>
      </li>

      <li class="create-movie">
        <%= link_to 'Add New Movie', new_movie_path, class: 'button' %>
      </li>

      <% if current_user %>
        <li class= 'side'>
          <%= link_to current_user.name, current_user, class: 'button' %>  
        </li> 

        <li class= 'side'>
          <%= link_to 'Account Settings', edit_user_path(current_user), class: 'button' %>  
        </li> 

        <li class= 'side'>
          <%= link_to 'Sign Out', session_path, method: :delete, class: 'button' %>  
        </li> 

        
       <% else %>
        <li class = 'side'>
          <%= link_to 'Sign Up', signup_path, class: 'button' %>
        </li>

         <li class ='side'>
           <%= link_to 'Sign In', signin_path, class: 'button' %>
          </li>
      <% end %>


    </ul>
  </nav>
</aside>