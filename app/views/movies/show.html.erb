	<article>
		<header>
			<h2><%= @movie.title %></h2>
		</header>
			<p>
				<%= @movie.rating %>
			</p>
				<p>
					<%= format_total_gross(@movie)%>
				</p>
				<p>
					<%= @movie.description %>
				</p>
				<p>
					<%= @movie.director %>
				</p>

				<p>
					<%= @movie.cast %>
				</p>

				<p>
					<%= @movie.duration %>
				</p>

				<p>
					<%= @movie.released_on.to_s(:release_date) %>
				</p>

				<p>
					<%= image_for(@movie) %>
				</p>
	</article>

